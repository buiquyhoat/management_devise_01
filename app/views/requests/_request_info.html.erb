<%= form_for @request, remote: true do |f| %>
  <div class="input-field col s6">
    <%= f.label :title %>
    <%= f.text_field :title, readonly: true , class: "form-control" %>
  </div>
  <div class="input-field col s6">
    <%= f.label :description %>
    <%= f.text_field :description, readonly: true, class: "form-control" %>
  </div>

  <div class="input-field col s6 disabled">
    <%= f.label t "request.table.request_type" %>
    <%= f.collection_select :request_type_id, @support.request_types, :id, :name, {},
      {class: "form-control", disabled: "disabled"} %>
  </div>

  <div class="input-field col s6">
    <%= f.label t "request.table.request_status" %>
    <%= f.collection_select :request_status_id, @support.request_statuses, :id,
      :name, {}, {class: "form-control", disabled: "disabled"} %>
  </div>

  <div class="input-field col s6">
    <%= f.label t "request.table.assignee" %>
    <%= f.collection_select :assignee_id, @support.staffs, :id, :name, {},
      {class: "form-control", disabled: "disabled"} %>
  </div>

  <table id="tbl_request_details" class="table table-hover">
    <thead>
      <tr>
        <th><%= t "request_detail.description" %></th>
        <th><%= t "request_detail.device_category" %></th>
        <th><%= t "request_detail.number" %></th>
      </tr>
    </thead>

    <tbody>
       <%= f.fields_for :request_details do |request_detail| %>
        <tr>
          <td> <%= request_detail.text_area :description,
            {class: "form-control", disabled: "disabled"} %></td>
          <td>
            <%= request_detail.collection_select :device_category_id,
              @support.device_categories, :id, :name, {},
              {class: "form-control", disabled: "disabled"} %>
          </td>
          <td><%= request_detail.text_field :number,
            {class: "form-control", disabled: "disabled"} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
