<% provide :title, t("request.title") %>
<div>
  <%= render "search_form" %>
  <% if @current_user.can_make_request %>
    <div class="form-group">
      <%= link_to t("request_manager.title_add_new"), requests_new_path,
        class: "btn btn-primary", remote: true,
        data: {toggle: "modal", target: "#dms-popup"} %>
    </div>
  <% end %>
  <div id="request_content_grid">
    <%= render "grid_content" %>
  </div>
</div>
