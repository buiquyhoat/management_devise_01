<% if @list_categories.any? %>
  <h5 class="list-category-size">
    <%= t ".find" %>
    <span class="size-result"><%= @list_categories_size %></span>
    <%= t ".matched" %>
  </h5>
  <table class="table table-hover" style="table-layout: fixed;">
    <thead>
      <tr>
        <th><%= t "device_categories.table.header.name" %></th>
        <th><%= t "device_categories.table.header.template_code" %></th>
        <th><%= t "device_categories.table.header.group_type" %></th>
        <th><%= t "device_manager.table.header.action" %></th>
      </tr>
    </thead>
    <tbody>
      <% @list_categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= category.template_code %></td>
          <td><%= category.device_group_name %></td>
          <td>
            <%= link_to "", edit_device_category_path(category), remote: true,
              class: "glyphicon glyphicon-pencil",
              data:{toggle: "modal", target: "#dms-popup", backdrop: "static"} %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
