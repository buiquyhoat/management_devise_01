<%= form_for @device_category, remote: true do |f| %>
  <div id="error">
  </div>
   <div class="input-field col s6">
    <%= f.label t "device_categories.table.header.group_type" %>
    <%= f.collection_select :device_group_id,
      @support.device_group_categories,:id,:name, {},{class: "form-control"} %>
  </div>
  <div class="input-field col s6">
    <%= f.label t "device_categories.table.header.name" %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>
  <div class="input-field col s6">
    <%= f.label t "device_categories.table.header.template_code" %>
    <%= f.text_field :template_code, class: "form-control", required: true %>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">
      <%= t "device_manager.button_close_text" %>
    </button>
    <button type="submit" class="btn btn-primary">
      <%= t "device_manager.button_submit_text.save_change" %>
    </button>
   </div>
<% end %>
