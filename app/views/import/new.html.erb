<h2><%= t "import.label_h1" %></h2>
<%= form_tag create_path(type: "device"), method: :put, multipart: true do %>
  <div class="row">
    <div class="col-lg-12">
      <h1><%= t "import.device" %></h1>
    </div>
  </div>
  <br/>
  <div class="row">
    <div class="col-lg-12">
      <%= file_field_tag :file, onchange: "validateFiles(this, #{Settings.allowedExtension.device});",
        data: {max_file_size: 5.megabytes} %>
    </div>
    <br/>
    <br/>
    <div class="col-lg-12">
      <button type="submit" class="btn btn-primary">
      <%= t "import.device" %></button>
    </div>
  </div>
<% end %>
<%= form_tag create_path(type: "user"), method: :put, multipart: true, remote: true do %>
  <div class="row">
    <div class="col-lg-12">
      <h1><%= t "import.user" %></h1>
    </div>
  </div>
  <br/>
  <div class="row">
    <div class="col-lg-12">
      <%= file_field_tag :file %>
    </div>
    <br/>
    <br/>
    <div class="col-lg-12">
      <button type="submit" class="btn btn-primary">
      <%= t "import.user" %></button>
    </div>
  </div>
<% end %>
